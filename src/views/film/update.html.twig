{% extends 'base.html.twig' %}

{% block title %}Modifier le film - {{ film.title }}{% endblock %}

{% block content %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Modifier les informations du film</h2>
    <form action="/films/update?id={{ film.id }}" method="POST" class="bg-white p-4 rounded shadow-sm">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="title" class="form-label">Titre</label>
                <input type="text" id="title" name="title" class="form-control" value="{{ film.title }}" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="year" class="form-label">Année</label>
                <input type="number" id="year" name="year" class="form-control" value="{{ film.year }}" min="1900" max="2100" required>
            </div>
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Genre</label>
            <input type="text" id="type" name="type" class="form-control" value="{{ film.type }}" required>
        </div>
        <div class="mb-3">
            <label for="director" class="form-label">Réalisateur</label>
            <input type="text" id="director" name="director" class="form-control" value="{{ film.director }}" required>
        </div>
        <div class="mb-3">
            <label for="synopsis" class="form-label">Synopsis</label>
            <textarea id="synopsis" name="synopsis" class="form-control" rows="4" required>{{ film.synopsis }}</textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Mettre à jour
            </button>
        </div>
    </form>
</div>
{% endblock %}