{% extends 'base.html.twig' %}

{% block title %}Détails du Film - {{ film.title }}{% endblock %}

{% block content %}
<div class="container my-5">
    <h1 class="text-center text-primary mb-4">Détails du Film</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center">{{ film.title }}</h2>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>ID :</strong> {{ film.id }}
                </li>
                <li class="list-group-item">
                    <strong>Titre :</strong> {{ film.title }}
                </li>
                <li class="list-group-item">
                    <strong>Année :</strong> {{ film.year }}
                </li>
                <li class="list-group-item">
                    <strong>Genre :</strong> {{ film.type }}
                </li>
                <li class="list-group-item">
                    <strong>Synopsis :</strong> {{ film.synopsis }}
                </li>
                <li class="list-group-item">
                    <strong>Réalisateur :</strong> {{ film.director }}
                </li>
                <li class="list-group-item">
                    <strong>Ajouté le :</strong> {{ film.createdAt ? film.createdAt|date('Y-m-d H:i:s') : 'Non disponible' }}
                </li>
                <li class="list-group-item">
                    <strong>Modifié le :</strong> {{ film.updatedAt ? film.updatedAt|date('Y-m-d H:i:s') : 'Non disponible' }}
                </li>
            </ul>
        </div>
        <div class="card-footer text-center">
            <a href="/films" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Retour à la liste des films
            </a>
        </div>
    </div>
</div>
{% endblock %}